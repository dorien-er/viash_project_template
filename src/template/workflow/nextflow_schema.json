{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "viash_project_template",
    "description": "Viash project template.",
    "type": "object",
    "definitions": {
        "inputs": {
            "title": "sample_sheet input",
            "type": "object",
            "description": "No description",
            "properties": {
                "param_list": {
                    "type": "string",
                    "description": "Allows inputting multiple parameter sets to initialise a Nextflow channel. A `param_list` can either be a list of maps, a csv file, a json file, a yaml file, or simply a yaml blob.",
                    "default": ""
                }
            }
        },
        "manual inputs": {
            "title": "manual input",
            "type": "object",
            "description": "Optional: input of global parameters or to override parameters present in sample_sheet.",
            "properties": {
                "input": {
                    "type": "string",
                    "description": "Input TSV file.",
                    "default": ""
                },
                "column": {
                    "type": "integer",
                    "description": "The column index to extract from the TSV input file.",
                    "default": 2
                },
                "output": {
                    "type": "string",
                    "description": "Output TSV file.",
                    "default": ""
                }
            }
        },
        "nextflow input-output arguments": {
            "title": "manual input",
            "type": "object",
            "description": "Input/output parameters for Nextflow itself.",
            "properties": {
                "publish_dir": {
                    "type": "string",
                    "description": "Path to an output directory.",
                    "default": ""
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/inputs"
        },
        {
            "$ref": "#/definitions/manual inputs"
        },
        {
            "$ref": "#/definitions/nextflow input-output arguments"
        }
    ]
}
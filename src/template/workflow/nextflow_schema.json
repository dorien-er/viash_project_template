{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "viash_project_template",
    "description": "Viash Project Template.",
    "type": "object",
    "definitions": {
        "inputs": {
            "title": "Sample sheet input",
            "type": "object",
            "description": "Allows inputting multiple parameter sets to initialise a Nextflow channel.",
            "properties": {
                "param_list": {
                    "description": "Input can either be a list of maps, a csv file, a json file, a yaml file, or simply a yaml blob.",
                    "default": "",
                    "format": "file-path",
                    "mimetype": "text/csv",
                    "pattern": "^\\S+\\.csv$"
                }
            }
        },
        "manual inputs": {
            "title": "Manual input",
            "type": "object",
            "description": "Optional: input of global parameters, overrides parameters present in the param_list.",
            "properties": {
                "input": {
                    "type": "string",
                    "description": "Input TSV file.",
                    "default": ""
                },
                "column": {
                    "type": "integer",
                    "description": "The column index to extract from the TSV input file.",
                    "default": ""
                },
                "output": {
                    "type": "string",
                    "description": "Output TSV file.",
                    "default": ""
                }
            }
        },
        "nextflow input-output arguments": {
            "title": "Nextflow input",
            "type": "object",
            "description": "Input/output parameters for Nextflow itself.",
            "properties": {
                "publish_dir": {
                    "type": "string",
                    "description": "Path to an output directory.",
                    "default": ""
                }
            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/inputs"
        },
        {
            "$ref": "#/definitions/manual inputs"
        },
        {
            "$ref": "#/definitions/nextflow input-output arguments"
        }
    ]
}